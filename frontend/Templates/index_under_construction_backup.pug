//- 使用配置變數（config 由 compile-multi-client.js 注入）
- const brand = typeof config !== 'undefined' && config ? (config.brand || {}) : {}
- const content = typeof config !== 'undefined' && config ? (config.content || {}) : {}
- const fonts = typeof config !== 'undefined' && config ? (config.fonts || {}) : {}
- const underConstructionDefault = {
-   pageTitle: 'Tracking System is on the way.',
-   titleLine1: 'Tracking System',
-   titleLine2: 'is on the way.',
-   subtitle: 'We are working hard to bring you a better way to monitor your shipments.',
-   backButtonText: 'Back Home',
-   copyright: 'Copyright © 2025 All Rights Reserved.',
- }
- const underConstruction = content.underConstruction || underConstructionDefault

doctype html
html(lang="zh-TW")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= underConstruction.pageTitle || 'Tracking System is on the way.'
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    - const fontFamily = fonts.primary || 'Noto Sans'
    - const encodedFont = encodeURIComponent(fontFamily)
    - const fontUrl = 'https://fonts.googleapis.com/css2?family=Inter:wght@800&family=' + encodedFont + ':wght@300;400;500;600;700&display=swap'
    link(href=fontUrl, rel="stylesheet")
    link(rel="icon", type="image/svg+xml", href=brand.favicon || "./images/favicon.svg")
    link(rel="stylesheet", href="./css/main.css")
    script(src="./js/config.js")
    script(src="./js/app.js", defer)
  body
    section.hero-banner--under-construction
      .hero-overlay
        .container
          .hero-panel
            .hero-panel__left
              .hero-brand
                img.hero-logo(src=brand.logo || "./images/logo.png", alt=brand.name || "Logo")
              .hero-content
                .hero-text
                  h1.hero-title
                    span.hero-title__line.hero-title__line--under= underConstruction.titleLine1 || 'Tracking System'
                    span.hero-title__line.hero-title__line--construction= underConstruction.titleLine2 || 'is on the way.'
                  p.hero-subtitle.hero-subtitle--desktop= underConstruction.subtitle || 'We\'re working hard to bring you a better way to monitor your shipments.'
                  picture.hero-illustration
                    source(srcset="./images/underConstruction.svg", media="(max-width: 768px)")
                    - const brandNameForAlt = brand.name || 'Tracking'
                    - const illustrationAlt = brandNameForAlt + ' Tracking Illustration'
                    img.hero-illustration__img(src="./images/underConstruction.svg", alt=illustrationAlt)
                  .hero-actions
                    if brand.website
                      a.btn.btn--primary.btn--large(href=brand.website)= underConstruction.backButtonText || 'Back Home'
            .hero-panel__right
          - const currentYear = new Date().getFullYear()
          - const copyrightBase = underConstruction.copyright || 'Copyright © 2025 All Rights Reserved.'
          - const copyrightText = copyrightBase.replace('2025', currentYear.toString())
          p.hero-panel__copyright= copyrightText

    // Footer removed per request
