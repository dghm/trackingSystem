//- Results Panel Component
//- 查詢結果面板組件
//- 使用配置變數（config 由 compile-multi-client.js 注入）

- if (typeof content === 'undefined' || !content)
  - content = (typeof config !== 'undefined' && config && config.content) ? config.content : {}
- const resultsContent = content && content.results ? content.results : {}

.results-panel.is-empty.is-hidden
  h2.results-title= resultsContent.resultsTitle || 'Latest Shipment Updates'
  .results-container
    .results-highlight
      .summary-grid
        .summary-placeholder.summary-placeholder--visual-only
          .results-message__illustration
            img(src="./images/noData.svg", alt="No data illustration")
          p.summary-placeholder__note 查無此追蹤編號的記錄，請確認編號是否正確。

    .status-info
      .status-placeholder
        h3.status-placeholder__title= resultsContent.statusPlaceholderTitle || 'Tracking status will appear here'
        p.status-placeholder__text= resultsContent.statusPlaceholderText || "After we find a matching record, you'll see the current milestone, last update timestamp, and any special handling tags."
  .timeline-content
    h3.timeline-title= resultsContent.timelineTitle || 'Shipment History'
    p.timeline-description= resultsContent.timelineDescription || 'Track your shipment through each milestone'
    .timeline-placeholder
      p.timeline-placeholder__text= resultsContent.timelinePlaceholderText || 'Timeline events will populate automatically once a shipment is found.'
    .timeline-visual
      .timeline-track
      .timeline-connector
      .timeline-nodes-container
      .timeline-events
  p.results-note= resultsContent.resultsNote || 'This information is NOT updated in real-time. For the most current status, please refresh this page or contact our customer service team.'
  .feedback-section.is-hidden
    .feedback-content
      .feedback-text
        h3= resultsContent.feedbackTitle || 'Thank you for using our tracking system.'
        p= resultsContent.feedbackText1 || 'We value your opinion and invite you to share your experience.'
        p= resultsContent.feedbackText2 || 'Submit a completed feedback form with valid information to receive a $100 discount voucher as a token of our appreciation.'
      a.feedback-link(href="https://forms.gle/YOUR_GOOGLE_FORM_ID", target="_blank", rel="noopener noreferrer")= resultsContent.feedbackLinkText || 'Share Your Feedback'
  .ad-banner
  .api-debug-panel.is-hidden
    h4.api-debug-panel__title= resultsContent.apiDebugTitle || 'API Response Preview'
    pre.api-debug-panel__body= resultsContent.apiDebugNoData || 'No data loaded yet.'
  button.btn.btn--primary.results-mobile-cta(type="button")
    span.btn-text= resultsContent.trackingAnotherText || 'TRACKING ANOTHER SHIPMENT'
