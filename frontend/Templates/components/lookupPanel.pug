//- Tracking Lookup Panel Component
//- 貨件查詢面板組件
//- 使用配置變數（config 由 compile-multi-client.js 注入）
//- 注意：如果父模板已定義 content 和 brand，則不需要重新定義

- if (typeof content === 'undefined' || !content)
  - content = (typeof config !== 'undefined' && config && config.content) ? config.content : {}
- if (typeof brand === 'undefined' || !brand)
  - brand = (typeof config !== 'undefined' && config && config.brand) ? config.brand : {}
- const fieldLabels = (content && content.fieldLabels) ? content.fieldLabels : { orderNo: 'Job No.', trackingNo: 'Tracking No.' }

.tracking-lookup-panel
  h2.summary-title= content.lookupTitle || 'Shipment Tracking Lookup'
  .summary-search
    form.summary-form#trackingForm(action="#", method="get")
      .form-row
        .input-group
          label.input-label(for="orderNo")= fieldLabels.orderNo || 'Job No.'
          input#orderNo(type="text", name="orderNo", placeholder=content.orderNoPlaceholder || "e.g., TM111682", required)
        .input-group
          label.input-label(for="trackingNo")= fieldLabels.trackingNo || 'Tracking No.'
          input#trackingNo(type="text", name="trackingNo", placeholder=content.trackingNoPlaceholder || "e.g., GEXVC2YF", required)
        button.btn.btn--primary#submitBtn(type="submit")= content.submitButtonText || 'STATUS CHECK'
      if content.helpText
        p.form-helper= content.helpText

